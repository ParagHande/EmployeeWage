package com.bridgelabz.usecase;

public class EmployeeWage {
	
	public static void main(String[] args) { 
		
		int wages = 0;
		int wagesPerHour =20;
		int workingHourPerDay = 3
		int workingDay = 0;
		int totalWorkingHours = 0;
		
		boolean condition = true;
		
		while(condition) {
			workingDay = workingDay+1;
			totalWorkingHours = totalWorkingHours+workingHourPerDay;
			wages = totalWorkingHours*wagesPerHour;
			
			if (workingDay==20 || totalWorkingHours==100) {
				System.out.println(wages);
				condition = false;
			}
			System.out.println(workingDay +" "+totalWorkingHours +" "+wages);
			
		}
		
	}
	
}
